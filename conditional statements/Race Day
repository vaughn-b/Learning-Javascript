let raceNumber = Math.floor(Math.random() * 1000);
let runnerEarly = true;
let runnerAge = 18;
if (runnerEarly && runnerAge > 18){
  raceNumber += 1000
}//determines if the runner is early, and if they are assigns them a raceNumber over 1000
if (runnerEarly && runnerAge > 18){
  console.log (`Your number is ${raceNumber} and your race will begin at 9:30am.`); //if the runner is an adult and registered early, they get this message
  } else if(!runnerEarly && runnerAge > 18) {
  console.log (`Your number is ${raceNumber} and your race will begin at 11:00am.`);//if the runner is an adult but registered late, they get this message
  } else if (runnerAge < 18){
    console.log (`Your number is ${raceNumber} and your race will begin at 12:30pm.`);//if the runner is less than 18 they'll be presented this message
  } else {
    console.log('See the registration desk!'); //if runner is 18, they will be presented this message
  } 
